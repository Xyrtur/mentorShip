# https://kivy.org/doc/stable/api-kivy.core.text.markup.html
# https://kivy.org/doc/stable/api-kivy.uix.textinput.html
<CustBotButton@Button>:
    font_name: "Ostrich"
    font_size: 40
    color: 0,0,0,1
    markup: True
    background_normal: 'on-down-pink.png'
    background_down: 'normal-color.png'
    background_color: ''
    disabled_color: 1,1,1,1
    disabled: True

<CustTopButton@Button>:
    markup: True
    font_name: "Ostrich"
    font_size: 40
    color: 0,0,0,1
    background_normal: 'normal-yellow.png'
    background_down: 'orange.jpg'
    disabled_color: 1,1,1,1

<containerLayout>:
    canvas.before:
        Color:
            rgba: .8,1,.8,1   
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'black.jpg'
    id: sorter
    rows: 2
    text: ''
    padding:30

    GridLayout:
        cols:2
        size_hint: 1,.7  
        spacing:5
        GridLayout:
            rows: 2
            
            
            CustTopButton:
                id: loadButton
                text: 'Load'
                on_press: sorter.create(loadButton, sortAll)
                padding_bottom:20

        FloatLayout:      
            Label:
                text: 'Mentorship \n     Pairing'
                pos_hint: {'center_x': 0.55 ,'center_y':.7}
                color: 1,1,1,1
                font_size:50
                bold: True
                font_name: "Ostrich"
    
    BoxLayout:
        orientation: "horizontal"
        spacing:30

        CustBotButton:
            id: sortAll
            text: 'Generate\n Pairings'
            on_press: sorter.allSort(self)
        
        CustTopButton:
            text: 'Exit'
            on_press: sorter.exit()

        